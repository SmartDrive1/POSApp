<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Rectangle (Solid Color) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EDEAE6"/> <!-- Set your desired background color here -->
        </shape>
    </item>

    <!-- Background Image -->
    <item>
        <bitmap
            android:src="@drawable/backgroundimage"
            android:gravity="fill"
            android:alpha="0.6"
            android:tintMode="add"
            android:tint="@color/black"/>
    </item>

<!--    &lt;!&ndash; Vector Shape &ndash;&gt;-->
<!--    <item android:drawable="@drawable/wave2" android:gravity="fill_horizontal"/>-->

</layer-list>