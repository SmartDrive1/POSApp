<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/wave1bg"
    android:layout_gravity="center_vertical"
    tools:context=".products.productList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!--        Whole Page-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <!--Left Side-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="70"
                android:background="@drawable/border"
                android:layout_margin="10dp">
                <!--            Drinks-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:text="Drinks"
                        android:textStyle="bold"
                        android:background="@drawable/textbackground"
                        android:layout_margin="3dp"></TextView>

                    <!--        recyclerview-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/leftIndicator1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/left_indicator_icon"
                            android:visibility="gone"/>

                        <!--        recyclerview-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleProds"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="95"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/rightIndicator1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/right_indicator_icon"/>
                    </LinearLayout>
                </LinearLayout>
                <!--            Foods-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:text="Foods"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/textbackground"
                        android:layout_margin="3dp"></TextView>

                    <!--        recyclerview-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/leftIndicator2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/left_indicator_icon"
                            android:visibility="gone"/>

                        <!--        recyclerview-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleFoods"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="95"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/rightIndicator2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/right_indicator_icon"/>
                    </LinearLayout>
                </LinearLayout>
                <!--            Add-Ons-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:text="Cakes And Cupcakes"
                        android:textStyle="bold"
                        android:background="@drawable/textbackground"
                        android:layout_margin="3dp"></TextView>

                    <!--        recyclerview-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/leftIndicator3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/left_indicator_icon"
                            android:visibility="gone"/>

                        <!--        recyclerview-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleCakes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="95"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/rightIndicator3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/right_indicator_icon"/>
                    </LinearLayout>
                </LinearLayout>

                <!--            Others-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:text="Special Orders"
                        android:textStyle="bold"
                        android:background="@drawable/textbackground"
                        android:layout_margin="3dp"></TextView>

                    <!--        recyclerview-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/leftIndicator4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/left_indicator_icon"
                            android:visibility="gone"/>

                        <!--        recyclerview-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleSpecial"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="95"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/rightIndicator4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/right_indicator_icon"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--        Right Layout-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="30"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="Manage\nProducts"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:maxLines="2"/>

                <EditText
                    android:id="@+id/txtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:drawableStart="@drawable/search"
                    android:textSize="16sp"
                    android:minHeight="40sp"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="Search Product Name"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:background="@drawable/button1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:background="@drawable/button1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:maxLines="1"></Button>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>