<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wave1bg"
    tools:context=".transactions.manageTransactions">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="100"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:padding="3dp"
                android:background="@drawable/textbackground">

                <TextView
                    android:id="@+id/nameP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/black"
                    android:text="Trans ID"
                    android:ems="5"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/quantityP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nameP"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/black"
                    android:text="Total Quantity"
                    android:textAlignment="center"
                    android:ems="5"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/priceP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/quantityP"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Total Price"

                    android:ems="5"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/dateP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/priceP"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/black"
                    android:text="Trans Date"
                    android:textAlignment="textEnd"
                    android:ems="5"
                    android:maxLines="2"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleTrans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:layout_gravity="center">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="30sp"
            android:layout_margin="20sp">

            <LinearLayout
                android:id="@+id/btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeStepGranularity="7sp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Manage\nTransactions"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="100"
                    android:layout_margin="3dp"
                    android:background="@drawable/back">

                    <EditText
                        android:id="@+id/txtStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="Start Date"
                        android:textSize="16sp"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:padding="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="to"
                        android:textAlignment="center"
                        android:layout_weight="10"/>
                    <EditText
                        android:id="@+id/txtEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:layout_marginRight="3dp"
                        android:hint="End Date"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:enabled="false"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="@drawable/edit_text_border"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnExcel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:background="@drawable/button1"
                    android:maxLines="1"
                    android:text="Export"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textSize="16sp"
                        android:background="@drawable/button1"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:text="Reset"/>

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textSize="16sp"
                        android:background="@drawable/button1"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="Back"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>