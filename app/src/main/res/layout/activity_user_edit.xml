<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wave1bg"
    tools:context=".users.userEdit">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="5dp"
            app:cardCornerRadius="30sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_marginLeft="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit User"
                        android:textSize="30sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        android:paddingRight="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_margin="5dp">

                            <!--  ID  -->
                            <EditText
                                android:id="@+id/txtEditID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:editable="false"
                                android:drawableStart="@drawable/iconid"
                                android:layout_margin="3dp"
                                android:textAlignment="center"
                                android:background="@drawable/edit_text_border"
                                android:ems="8"/>

                            <!--  Full Name  -->
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtEditName"
                                android:background="@drawable/edit_text_border"
                                android:textSize="16sp"
                                android:drawableStart="@drawable/userpic"
                                android:hint="Name"
                                android:layout_margin="3dp"
                                android:textAlignment="center"
                                android:ems="8"/>

                            <!--  UserName  -->
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtEditUserName"
                                android:hint="Username"
                                android:drawableStart="@drawable/userpic"
                                android:background="@drawable/edit_text_border"
                                android:layout_margin="3dp"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:ems="8"/>

                            <!--  Password  -->
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtEditPassword"
                                android:background="@drawable/edit_text_border"
                                android:drawableStart="@drawable/iconpass"
                                android:hint="Password"
                                android:layout_margin="3dp"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:ems="8"/>

                            <!--  Access  -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:background="@drawable/edit_text_border"
                                android:layout_margin="3dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:drawableStart="@drawable/lockpic"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"/>

                                <Spinner
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/accID"
                                    android:autoSizeTextType="uniform"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:layout_weight="2.6"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!--        Buttons-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="30sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_weight="1">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Update"
                                    android:textSize="16sp"
                                    android:background="@drawable/button1"
                                    android:layout_margin="3dp"
                                    android:textStyle="bold"
                                    android:id="@+id/btnEdit"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Del"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:background="@drawable/button1"
                                        android:layout_margin="3dp"
                                        android:layout_weight="1"
                                        android:id="@+id/btnDelete"/>
                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Back"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:background="@drawable/button1"
                                        android:layout_margin="3dp"
                                        android:layout_weight="1"
                                        android:id="@+id/btnCancel"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>