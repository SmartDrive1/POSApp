<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".forgetPassword"
    android:background="#EDEAE6">
    <!--background-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave2"/>
    <!--    whole layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- left side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="30sp"
                android:layout_margin="20sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:gravity="center"
                        android:textSize="45sp"
                        android:maxEms="4"
                        android:textColor="@color/black"
                        android:padding="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="or email uriel.fuerte.5@gmail.com"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:padding="5sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--        Right Side-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="5dp"
            app:cardCornerRadius="30sp"
            android:layout_margin="20sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10sp">
                <!--  Username Textbox  -->
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUser"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/userpic"
                    android:ems="10"
                    android:textAlignment="center"/>

                <!--  Password Textbox  -->

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPass"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/lockpic"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"/>

                <!--  Buttons  -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="1sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="10sp"
                        android:background="@drawable/button1"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:id="@+id/btnLogin"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="1sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="10sp"
                        android:background="@drawable/button1"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:id="@+id/btnBack"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>