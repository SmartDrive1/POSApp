<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#EDEAE6"
    tools:context=".MainScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <!--  Text  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tea'll I Met You Cafe\nOrdering System"
                android:textSize="100px"
                android:layout_weight="1"
                android:textColor="@color/black"/>
        </LinearLayout>

    <!--  1st row Buttons  -->
        <LinearLayout
            android:weightSum="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Users"
                android:id="@+id/btnUsers"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="10sp"
                android:maxLines="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Products"
                android:id="@+id/btnProducts"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="7sp"
                android:maxLines="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Transactions"
                android:id="@+id/btnTransactions"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="5sp"
                android:maxLines="1"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="1sp"
                android:text="(Si Uri lang pwede pumindot)"
                android:id="@+id/btnAdmin"
                android:layout_margin="5dp"/>
        </LinearLayout>
    <!--    2nd row buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Ordering System"
                android:id="@+id/btnOrderingSystem"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="5sp"
                android:maxLines="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Analysis"
                android:layout_weight="1"
                android:id="@+id/btnAnalysis"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="8sp"
                android:maxLines="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="More\nInfo"
                android:layout_weight="1"
                android:id="@+id/btnMoreInfo"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="8sp"
                android:maxLines="2"/>
        </LinearLayout>

        <!--    2nd row buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Inventory"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="5sp"
                android:maxLines="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Logout"
                android:layout_weight="1"
                android:id="@+id/btnLogout"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="8sp"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>