<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#EDEAE6"
    tools:context=".MainScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <!--  Text  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tea'll I Met You Cafe\nOrdering System"
                android:textSize="40sp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
        </LinearLayout>

    <!--  1st row Buttons  -->
        <LinearLayout
            android:weightSum="3"
            android:layout_width="500sp"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ordering System"
                android:drawableTop="@drawable/iconorder"
                android:padding="4dp"
                android:id="@+id/btnOrderingSystem"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:maxLines="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Analysis"
                android:drawableTop="@drawable/iconanalysis"
                android:layout_weight="1"
                android:id="@+id/btnAnalysis"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:maxLines="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Management"
                android:drawableTop="@drawable/iconmanage"
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/btnManagement"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:maxLines="1"/>

        </LinearLayout>
    <!--    2nd row buttons -->
        <LinearLayout
            android:layout_width="500sp"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="More\nInfo"
                android:drawableTop="@drawable/iconinfo"
                android:padding="7dp"
                android:layout_weight="1"
                android:id="@+id/btnMoreInfo"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:maxLines="2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Logout"
                android:drawableTop="@drawable/iconback"
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/btnLogout"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="1sp"
        android:text="(Si Uri lang pwede pumindot)"
        android:id="@+id/btnAdmin"
        android:layout_margin="5dp"/>
</RelativeLayout>