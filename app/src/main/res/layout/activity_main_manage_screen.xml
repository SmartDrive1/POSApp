<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave1bg"
    tools:context=".mainManageScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="30sp"
                android:layout_margin="20sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:text="Management"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

<!--        Row 1-->
        <LinearLayout
            android:layout_width="500sp"
            android:layout_height="100sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/btnUsers"
                android:text="Users"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableTop="@drawable/iconuser"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/btnProducts"
                android:layout_weight="1"
                android:text="Products"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="@drawable/button1"
                android:textStyle="bold"
                android:drawableTop="@drawable/iconproducts"/>

        </LinearLayout>

        <!--        Row 2-->
        <LinearLayout
            android:layout_width="500sp"
            android:layout_height="100sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnTransactions"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Transactions"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:drawableTop="@drawable/icontransactions"/>
<!--            <Button-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:id="@+id/btnInventory"-->
<!--                android:layout_weight="1"-->
<!--                android:padding="10dp"-->
<!--                android:text="Inventory"-->
<!--                android:layout_margin="5dp"-->
<!--                android:textSize="18sp"-->
<!--                android:textStyle="bold"-->
<!--                android:background="@drawable/button1"-->
<!--                android:drawableTop="@drawable/iconinventory"/>-->

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnBack"
                android:layout_weight="1"
                android:text="Back"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:drawableTop="@drawable/iconback"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>